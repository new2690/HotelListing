{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "ConnectionStrings": {
    "hotelConnection": "Data Source=.;Initial Catalog=hotelDB;Integrated Security=True;Pooling=False"
  },
  "AllowedHosts": "*",
  "Jwt": {
    "Issuer": "HotelListing",
    "KEY": "first key of hotel listing"
  },

  "Serilog": {
    "using": [ "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Information"
    },
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "../logs/HotelLogs-.txt",
          "rollingInterval": "Day",
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] {Message:lj}{NewLine}{Exception}"
        }
      }
    ]
  }
}
